<resources>
    <style name="CustomChipStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:letterSpacing">0.08</item> <!-- Исправлено -->
        <item name="android:gravity">center</item>
        <item name="android:elevation">4dp</item>
        <item name="chipBackgroundColor">@android:color/white</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.CustomChip</item>
