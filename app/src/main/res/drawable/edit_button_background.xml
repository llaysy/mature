<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer circle (white border) -->
    <item>
        <shape android:shape="oval">
            <solid android:color="@android:color/white" />
            <size
                android:width="40dp"
                android:height="40dp"/>
        </shape>
    </item>
    <!-- Inner circle (edit button background) -->
    <item
        android:top="2dp"
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp">
        <shape android:shape="oval">
            <solid android:color="#48B2E7" />
        </shape>
    </item>
</layer-list>